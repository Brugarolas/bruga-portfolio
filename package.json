    "raf": "3.4.1",
    "nanoid": "^2.1.0",
    "typewriter-effect": "^2.10.0",
    "@fortawesome/fontawesome-free": "^5.10.2"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "cross-env": "^5.2.1",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0",
    "babel-loader": "^8.0.6",
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "babel-preset-minify": "^0.5.1",
    "file-loader": "^4.2.0",
    "style-loader": "^1.0.0",
    "css-loader": "^3.2.0",
