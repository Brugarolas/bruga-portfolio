{
  "name": "bruga-portfolio",
  "description": "A personal portfolio made with Pug and Sass",
  "version": "1.0.0",
  "author": "andres-brugarolas",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "start:local": "cross-env NODE_ENV=development webpack-dev-server --open --hot --host 0.0.0.0",
    "build": "cross-env NODE_ENV=production webpack -p --progress --hide-modules",
    "gh-pages": "cross-env NODE_ENV=production PUBLIC_PATH=bruga-music webpack -p --progress --hide-modules",
    "analyzer": "cross-env NODE_ENV=production ANALYZER=true webpack -p --progress --hide-modules"
  },
  "dependencies": {
    "core-js": "^3.6.2",
    "@babel/runtime-corejs3": "^7.7.7",
    "raf": "3.4.1",
    "nanoid": "^2.1.9",
    "typewriter-effect": "^2.12.2",
    "@fortawesome/fontawesome-free": "^5.12.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "cross-env": "^6.0.3",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "babel-loader": "^8.0.6",
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "babel-preset-minify": "^0.5.1",
    "file-loader": "^5.0.2",
    "style-loader": "^1.1.2",
    "css-loader": "^3.4.1",
    "css-hot-loader": "^1.4.4",
    "sass-loader": "^8.0.0",
    "pug-loader": "^2.4.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "webpack-bundle-analyzer": "^3.6.0",
    "node-sass": "^4.13.0",
    "pug": "^2.0.4"
  }
}
