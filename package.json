    "css-loader": "^6.7.3",
    "favicons": "^7.1.2",
    "favicons-webpack-plugin": "^6.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.1",
    "mini-css-extract-plugin": "^2.7.5",
    "npm-check-updates": "^16.10.7",
    "pug": "^3.0.2",
    "pug-loader": "^2.4.0",
    "puppeteer-core": "^19.8.5",
    "sass": "^1.61.0",
    "sass-loader": "^13.2.2",
    "svgo": "^3.0.2",
